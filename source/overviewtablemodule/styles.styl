// overviewtable styles
button-size = 22px

@import '../../../node_modules/gridjs/dist/theme/mermaid.css'

.girdjs-search
    transition: transform 0.3s
.gridjs-search-input
    width 220px

#overviewtable
    position relative
    width 100%

.gridjs-container
    box-sizing: border-box

.gridjs-wrapper
    background-color: white

input.gridjs-input
    border-radius: 4px

th.gridjs-th
    padding 7px 17px
    font-size: 12pt

.gridjs-footer
    padding-left 5px
    padding-right 5px
    height 50px
    border-radius: 0 0 4px 4px  
    
.gridjs-pagination
    vertical-align: middle

.gridjs-summary
    vertical-align: middle
    white-space: nowrap
    text-overflow: ellipsis
    overflow: hidden
    font-size: 10pt
    width 200px
    margin 0 !important

.gridjs-pages
    vertical-align: middle
    display flex
    max-width: 100% 

.gridjs-pages > button
    overflow: hidden
    flex-shrink 2
    font-size: 9pt
    padding: 3px !important

.gridjs-pages > button:first-child
    flex-shrink 10
    text-overflow: ellipsis

.gridjs-pages > button:last-child
    flex-shrink 10
    text-overflow: ellipsis

table.gridjs-table
    min-width: 800px

.gridjs-wrapper
    border-radius: 4px 4px 0 0 
    // max-height: var(--table-max-height)
    height: var(--table-max-height) !important

th.gridjs-th
    background-color #F9FAFB
    z-index 20

tr.gridjs-tr:nth-child(2n)
    background-color: alpha(cd-darkblue, 0.3)

td.gridjs-td
    background transparent
    font-size: 12pt
    vertical-align: middle
    padding 6px 12px
    height: fit-content
    svg
        width: button-size
        height button-size
    a:hover
        text-decoration: underline
        cursor pointer
    ul.befunde
        list-style-image url("img/document_certificate.png")
        padding-left 15px
    ul.bilder
        list-style-image url("img/icon_bild.gif")
        padding-left 15px

.click-button
.click-button:hover
    overflow: hidden
    background-color: cd-turquoise
    color white
    padding 10px
    text-transform: uppercase    

.isNewDot
    height 12px
    width 12px
    border-radius: 50%
    border solid 1px #999
    background-color: #eee

.isNewDot.isNew
    border-color #449900
    background-color: #44e000


// Befunde
th.gridjs-th:nth-child(2) 
td.gridjs-td:nth-child(2)
    width auto !important
    min-width auto !important
    max-width auto !important
    text-align: left

// Bilder
th.gridjs-th:nth-child(3) 
td.gridjs-td:nth-child(3)
    width auto !important
    min-width auto !important
    max-width auto !important
    text-align: left

// Unt.-Datum
th.gridjs-th:nth-child(4) 
td.gridjs-td:nth-child(4)
    width 122px !important
    min-width 122px !important
    max-width 122px !important
    text-align: center

// Radiologie
th.gridjs-th:nth-child(5) 
td.gridjs-td:nth-child(5)
    width auto !important
    min-width auto !important
    max-width auto !important
    text-align: left
